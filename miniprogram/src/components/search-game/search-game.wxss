.search-game-container {
  display: flex;
  flex-direction: column;
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

/* 算法选择区域 */
.algorithm-selector {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.selector-label {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}

.selector-options {
  display: flex;
  flex: 1;
}

.algorithm-option {
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 6rpx;
  margin-right: 10rpx;
}

.algorithm-option.active {
  background-color: #4CAF50;
  color: white;
}

/* 数组可视化区域 */
.array-visualization {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  height: 300rpx;
  margin: 20rpx 0;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  padding: 10rpx;
}

.array-item {
  width: 50rpx;
  margin: 0 5rpx;
  background-color: #4CAF50;
  color: white;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 6rpx 6rpx 0 0;
  transition: all 0.3s ease;
}

.array-item.current {
  background-color: #FF9800;
}

.array-item.checked {
  background-color: #2196F3;
}

.array-item.found {
  background-color: #4CAF50;
  animation: pulse 1s infinite;
}

.array-item.not-found {
  background-color: #F44336;
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}

/* 搜索输入区域 */
.search-input-area {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  height: 70rpx;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.search-button {
  width: 180rpx;
  height: 70rpx;
  background-color: #4CAF50;
  color: white;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 6rpx;
}

button[disabled] {
  background-color: #f5f5f5 !important;
  color: #ccc !important;
}

/* 搜索控制区域 */
.search-controls {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.control-button {
  flex: 1;
  height: 70rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 6rpx;
  margin: 0 10rpx;
}

.step-button {
  background-color: #2196F3;
  color: white;
}

.auto-button {
  background-color: #FF9800;
  color: white;
}

.auto-button.active {
  background-color: #F44336;
}

.reset-button {
  background-color: #9E9E9E;
  color: white;
}

/* 搜索信息区域 */
.search-info {
  margin-bottom: 20rpx;
  padding: 15rpx;
  background-color: #f5f5f5;
  border-radius: 6rpx;
}

.info-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.step-description {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  line-height: 1.5;
}

.search-result {
  margin-top: 10rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.result-found {
  color: #4CAF50;
}

.result-not-found {
  color: #F44336;
}

/* 算法信息区域 */
.algorithm-info {
  padding: 15rpx;
  background-color: #f5f5f5;
  border-radius: 6rpx;
}

.info-content {
  margin-top: 10rpx;
}

.info-item {
  margin-bottom: 8rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.info-label {
  font-weight: bold;
  margin-right: 10rpx;
}

.info-value {
  color: #333;
}

/* API模式选择器样式 */
.api-mode-selector {
  margin: 20rpx 0;
  padding: 10rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
}

.mode-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.mode-option {
  padding: 10rpx 20rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  font-size: 24rpx;
  text-align: center;
  margin: 0 10rpx;
  flex: 1;
}

.mode-option.active {
  background-color: #4CAF50;
  color: white;
}

.mode-option.disabled {
  opacity: 0.6;
  pointer-events: none;
}

/* 动画速度控制器样式 */
.animation-control {
  margin: 15rpx 0;
  padding: 15rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.control-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.control-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.control-value {
  font-size: 26rpx;
  color: #4CAF50;
  font-weight: bold;
}

.control-toggle {
  font-size: 24rpx;
  color: #999;
  text-decoration: underline;
}

.speed-slider {
  margin-top: 10rpx;
  padding: 5rpx 0;
}

/* 加载指示器样式 */
.loading-indicator {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  margin: 15rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 15rpx;
  font-size: 26rpx;
  color: #666;
}

/* 错误信息样式 */
.error-message {
  padding: 15rpx;
  margin: 10rpx 0;
  background-color: #ffebee;
  border-radius: 8rpx;
  border-left: 8rpx solid #f44336;
}

.error-message text {
  font-size: 26rpx;
  color: #d32f2f;
}

/* 禁用状态 */
.disabled {
  opacity: 0.6;
  pointer-events: none;
} 