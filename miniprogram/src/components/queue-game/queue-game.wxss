.queue-game-container {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 20rpx;
}

/* 任务区域样式 */
.task-panel {
  background-color: #f8f8f8;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.task-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.task-description {
  font-size: 28rpx;
  color: #666;
}

/* 队列可视化区域样式 */
.queue-visualization {
  margin: 20rpx 0;
}

.queue-labels {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.queue-label {
  font-size: 24rpx;
  color: #666;
}

.queue-container {
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
  padding: 10rpx;
  min-height: 100rpx;
  background-color: #f9f9f9;
}

.empty-queue {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 28rpx;
  height: 80rpx;
}

.queue-items {
  display: flex;
  overflow-x: auto;
}

.queue-item {
  min-width: 80rpx;
  height: 80rpx;
  background-color: #4caf50;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 10rpx;
  border-radius: 6rpx;
  font-weight: bold;
  font-size: 30rpx;
}

/* 操作区域样式 */
.queue-operations {
  margin: 20rpx 0;
}

.input-group {
  margin-bottom: 20rpx;
}

.queue-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background-color: white;
}

.queue-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.operation-btn {
  flex: 1;
  min-width: 180rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  padding: 0;
  margin: 0;
  text-align: center;
  border-radius: 10rpx;
}

.enqueue-btn {
  background-color: #4caf50;
  color: white;
}

.dequeue-btn {
  background-color: #f44336;
  color: white;
}

.peek-btn {
  background-color: #2196f3;
  color: white;
}

.operation-btn[disabled] {
  background-color: #cccccc !important;
  color: #999999 !important;
}

/* 队列信息样式 */
.queue-info {
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
  font-size: 26rpx;
}

.info-item {
  display: flex;
  align-items: center;
}

.info-label {
  color: #666;
  margin-right: 10rpx;
}

.info-value {
  color: #333;
  font-weight: bold;
}

/* 操作历史样式 */
.operation-history {
  margin-top: 20rpx;
  border-top: 2rpx solid #eee;
  padding-top: 20rpx;
}

.history-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.history-list {
  max-height: 300rpx;
  overflow-y: auto;
}

.history-item {
  padding: 10rpx;
  font-size: 26rpx;
  color: #666;
  border-bottom: 1rpx solid #eee;
}

.no-history {
  padding: 20rpx 0;
  font-size: 26rpx;
  color: #999;
  text-align: center;
} 