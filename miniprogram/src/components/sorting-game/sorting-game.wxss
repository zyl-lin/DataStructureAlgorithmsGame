.sorting-container {
  padding: 20rpx 10rpx;
  margin: 0 10rpx;
  background-color: #f8f8f8;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.05);
}

/* API模式切换 */
.mode-selector {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
  padding: 12rpx;
  background: #f1f1f1;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.06);
}

.mode-option {
  flex: 1;
  padding: 16rpx 0;
  margin: 0 12rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
  background: #fff;
  text-align: center;
  transition: all 0.3s;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.mode-option.active {
  background: #4caf50;
  color: #fff;
  font-weight: 500;
}

.mode-option.disabled {
  opacity: 0.5;
  pointer-events: none;
}

.array-visualization {
  display: flex;
  align-items: flex-end;
  justify-content: center;
  height: 350rpx;
  margin-bottom: 40rpx;
  background-color: white;
  border-radius: 24rpx;
  padding: 30rpx 20rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.08);
}

.array-item {
  flex: 1;
  margin: 0 2rpx;
  background-color: #4CAF50;
  position: relative;
  border-radius: 6rpx 6rpx 0 0;
  transition: height 0.3s ease;
}

.array-value {
  position: absolute;
  top: -30rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 22rpx;
  color: #333;
  font-weight: 500;
}

.controls-panel {
  background-color: white;
  border-radius: 24rpx;
  padding: 30rpx 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #333;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 8rpx;
  width: 8rpx;
  height: 24rpx;
  background-color: #4CAF50;
  border-radius: 4rpx;
}

.algorithm-selector {
  margin-bottom: 40rpx;
}

.algorithm-buttons {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.algorithm-btn {
  padding: 24rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  text-align: center;
  font-size: 26rpx;
  transition: all 0.3s;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.algorithm-btn.active {
  background-color: #4CAF50;
  color: white;
  font-weight: 500;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 10rpx rgba(76, 175, 80, 0.3);
}

.settings {
  margin-bottom: 40rpx;
}

.settings-row {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.setting-label {
  width: 160rpx;
  font-size: 26rpx;
  color: #555;
  font-weight: 500;
}

.action-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  min-width: 140rpx;
  padding: 24rpx 10rpx;
  border: none;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: white;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s;
}

.action-btn.generate {
  background-color: #2196F3;
}

.action-btn.sort {
  background-color: #4CAF50;
}

.action-btn.stop {
  background-color: #F44336;
}

.action-btn.reset {
  background-color: #673AB7;
  color: white;
}

.action-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.action-btn[disabled] {
  background-color: #e0e0e0;
  color: #999;
  box-shadow: none;
}

.info-panel {
  background-color: white;
  border-radius: 24rpx;
  padding: 30rpx 20rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 20rpx;
}

.info-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #333;
  position: relative;
  padding-left: 20rpx;
}

.info-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 8rpx;
  width: 8rpx;
  height: 24rpx;
  background-color: #2196F3;
  border-radius: 4rpx;
}

.algorithm-info {
  font-size: 26rpx;
  color: #555;
  margin-bottom: 24rpx;
  line-height: 1.6;
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 10rpx;
}

.stats {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  font-size: 26rpx;
  color: #444;
  background-color: #f5f5f5;
  padding: 20rpx;
  border-radius: 10rpx;
}

.error-message {
  color: #F44336;
  font-weight: bold;
  background-color: #ffebee;
  padding: 16rpx;
  border-radius: 8rpx;
  margin-top: 16rpx;
}

/* 加载状态覆盖层 */
.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid #f3f3f3;
  border-top: 8rpx solid #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 