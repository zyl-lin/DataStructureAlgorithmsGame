.sorting-container {
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 20rpx;
}

.array-visualization {
  display: flex;
  align-items: flex-end;
  justify-content: center;
  height: 300rpx;
  margin-bottom: 40rpx;
  background-color: white;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.array-item {
  flex: 1;
  margin: 0 2rpx;
  background-color: #4CAF50;
  position: relative;
  border-radius: 4rpx 4rpx 0 0;
}

.array-value {
  position: absolute;
  top: -30rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 20rpx;
  color: #333;
}

.controls-panel {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.algorithm-selector {
  margin-bottom: 30rpx;
}

.algorithm-buttons {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.algorithm-btn {
  padding: 20rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  text-align: center;
  font-size: 24rpx;
}

.algorithm-btn.active {
  background-color: #4CAF50;
  color: white;
}

.settings {
  margin-bottom: 30rpx;
}

.settings-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.setting-label {
  width: 150rpx;
  font-size: 24rpx;
  color: #666;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  padding: 20rpx;
  border: none;
  border-radius: 10rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: white;
}

.action-btn.generate {
  background-color: #2196F3;
}

.action-btn.sort {
  background-color: #4CAF50;
}

.action-btn.stop {
  background-color: #F44336;
}

.action-btn.reset {
  background-color: #673AB7;
  color: white;
}

.action-btn[disabled] {
  background-color: #e0e0e0;
  color: #999;
}

.info-panel {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.info-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.algorithm-info {
  font-size: 24rpx;
  line-height: 1.6;
  color: #666;
  margin-bottom: 20rpx;
}

.stats {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  font-size: 24rpx;
  color: #333;
}

.error-message {
  color: #F44336;
  font-weight: bold;
}

/* 加载状态覆盖层 */
.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #4caf50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 