.binary-tree-container {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 20rpx;
}

/* 任务面板样式 */
.task-panel {
  background-color: #f8f8f8;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.task-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.task-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 遍历模式选择器样式 */
.traversal-selector {
  margin: 20rpx 0;
}

.selector-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.selector-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.selector-option {
  flex: 1;
  min-width: 150rpx;
  padding: 15rpx 10rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  text-align: center;
  font-size: 24rpx;
  color: #666;
}

.selector-option.active {
  background-color: #4caf50;
  color: white;
}

/* 二叉树可视化样式 */
.tree-visualization {
  margin: 30rpx 0;
  min-height: 250rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  overflow-x: auto;
}

.tree-level {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
  position: relative;
}

.tree-node-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.tree-node {
  width: 60rpx;
  height: 60rpx;
  background-color: #4caf50;
  color: white;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
  position: relative;
  z-index: 2;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
}

.tree-node.selected {
  background-color: #2196f3;
}

.tree-node.highlighted {
  animation: pulse 0.5s infinite alternate;
}

@keyframes pulse {
  from { transform: scale(1); }
  to { transform: scale(1.1); }
}

/* 分支连接线样式 */
.branch {
  position: absolute;
  width: 2rpx;
  height: 30rpx;
  background-color: #999;
  top: 60rpx;
}

.branch-left {
  transform: rotate(45deg);
  transform-origin: top center;
  left: 40%;
}

.branch-right {
  transform: rotate(-45deg);
  transform-origin: top center;
  right: 40%;
}

/* 用户遍历序列样式 */
.sequence-panel {
  margin: 20rpx 0;
}

.sequence-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.sequence-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  padding: 10rpx;
  min-height: 60rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
}

.sequence-item {
  width: 60rpx;
  height: 60rpx;
  background-color: #4caf50;
  color: white;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
}

.sequence-empty {
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 28rpx;
}

/* 反馈信息样式 */
.feedback-panel {
  margin: 20rpx 0;
  padding: 20rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
}

.feedback-message {
  font-size: 28rpx;
  margin-bottom: 15rpx;
  text-align: center;
  font-weight: bold;
}

.feedback-message.correct {
  color: #4caf50;
}

.feedback-message.incorrect {
  color: #f44336;
}

.correct-sequence {
  margin-top: 20rpx;
}

/* 操作按钮样式 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.action-btn {
  flex: 1;
  background-color: #4caf50;
  color: white;
  border-radius: 10rpx;
  padding: 15rpx 0;
  font-size: 28rpx;
  text-align: center;
  line-height: 1.5;
} 