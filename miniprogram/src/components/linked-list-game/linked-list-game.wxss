.game-component {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.game-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.game-description {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.linked-list-container {
  margin: 30rpx 0;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
}

.linked-list-visualization {
  display: flex;
  flex-wrap: wrap;
  margin: 30rpx 0;
  align-items: center;
}

.linked-list-node {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.node-value {
  width: 80rpx;
  height: 80rpx;
  background-color: #4CAF50;
  color: white;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
  font-size: 30rpx;
  transition: all 0.3s ease;
}

.node-value.highlight {
  background-color: #FF9800;
  transform: scale(1.1);
  box-shadow: 0 0 10rpx rgba(255, 152, 0, 0.5);
}

.node-pointer {
  flex: 1;
  margin: 0 20rpx;
  color: #666;
  font-weight: bold;
  font-size: 32rpx;
  text-align: center;
}

.node-pointer.last {
  color: #999;
  font-size: 28rpx;
}

.game-controls {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.control-button {
  flex: 1;
  margin: 0 10rpx;
  background-color: #4CAF50;
  color: white;
  font-size: 28rpx;
  padding: 15rpx 0;
}

/* 空链表提示 */
.empty-list {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 120rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  color: #999;
  font-size: 28rpx;
  margin: 30rpx 0;
}

/* 操作结果显示 */
.operation-result {
  margin: 20rpx 0;
  padding: 15rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  border-left: 8rpx solid #ccc;
}

.result-text {
  font-size: 26rpx;
  color: #666;
}

.result-text.success {
  color: #4CAF50;
  border-left-color: #4CAF50;
}

/* API模式切换 */
.api-toggle {
  display: flex;
  align-items: center;
  margin: 20rpx 0;
  padding: 10rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

.api-toggle text {
  font-size: 26rpx;
  color: #666;
  margin-right: 20rpx;
}

/* 动画速度控制 */
.speed-control {
  margin: 20rpx 0;
  padding: 10rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

.speed-control text {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}

/* 操作区域 */
.operations-container {
  margin: 30rpx 0;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
}

.operation-section {
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #eee;
}

.operation-section:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.operation-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  color: #333;
}

.operation-inputs {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.operation-input {
  flex: 1;
  height: 60rpx;
  padding: 0 20rpx;
  background-color: #fff;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.operation-button {
  min-width: 120rpx;
  height: 64rpx;
  line-height: 64rpx;
  background-color: #4CAF50;
  color: white;
  font-size: 26rpx;
  padding: 0 20rpx;
  border-radius: 8rpx;
}

.operation-button.full-width {
  width: 100%;
  margin-top: 10rpx;
}

/* 禁用状态 */
.operation-button[disabled] {
  background-color: #cccccc;
  color: #999;
}

.operation-input[disabled] {
  background-color: #f5f5f5;
  color: #999;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 20rpx 0;
}

.loading-indicator {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 原有样式保留 */
.operation-panel {
  background-color: #f8f8f8;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-top: 30rpx;
}

.control-group {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.control-label {
  font-size: 24rpx;
  margin-bottom: 10rpx;
  color: #666;
}

.control-input {
  padding: 16rpx;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.position-selector {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.position-option {
  padding: 16rpx 30rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  font-size: 24rpx;
  text-align: center;
  flex: 1;
}

.position-option.active {
  background-color: #4CAF50;
  color: white;
}

.result-panel {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
  width: 80%;
  max-width: 600rpx;
  z-index: 1000;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.result-content {
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 30rpx;
  color: #666;
}

.close-button {
  width: 100%;
  padding: 20rpx;
  background-color: #4CAF50;
  color: white;
  border: none;
  border-radius: 10rpx;
  font-size: 28rpx;
  font-weight: bold;
} 