/* 贪心算法游戏容器 */
.greedy-game-container {
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 算法选择区域 */
.algorithm-selector {
  margin-bottom: 20rpx;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.selector-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.algorithm-options {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.algorithm-option {
  padding: 12rpx 20rpx;
  background-color: #eef2f7;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #5a6877;
  cursor: pointer;
  transition: all 0.3s;
}

.algorithm-option.active {
  background-color: #3498db;
  color: #fff;
  font-weight: 500;
}

/* 输入区域 */
.input-area {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.input-group {
  margin-bottom: 15rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.input-field {
  width: 100%;
  height: 70rpx;
  border: 1px solid #ddd;
  border-radius: 6rpx;
  padding: 0 15rpx;
  font-size: 28rpx;
}

.input-textarea {
  width: 100%;
  height: 150rpx;
  border: 1px solid #ddd;
  border-radius: 6rpx;
  padding: 10rpx 15rpx;
  font-size: 28rpx;
}

/* 硬币设置 */
.coin-settings {
  margin-top: 20rpx;
}

.coin-settings-header {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.coin-list {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.coin-item {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #eef2f7;
  color: #5a6877;
  font-size: 30rpx;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s;
}

.coin-item.selected {
  background-color: #3498db;
  color: #fff;
}

/* 活动输入 */
.activities-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.activity-label {
  font-size: 28rpx;
  color: #333;
}

.activity-actions {
  display: flex;
  gap: 10rpx;
}

.small-btn {
  font-size: 24rpx;
  padding: 6rpx 15rpx;
  line-height: 1.5;
  min-height: auto;
  background-color: #f0f0f0;
  color: #333;
}

.activities-input {
  margin-bottom: 15rpx;
}

.activity-row {
  display: grid;
  grid-template-columns: 80rpx 1fr 1fr;
  gap: 10rpx;
  margin-bottom: 10rpx;
  align-items: center;
}

.activity-header-row {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
  margin-bottom: 15rpx;
}

.activity-id {
  text-align: center;
  font-size: 26rpx;
}

.activity-time {
  text-align: center;
}

.activity-time-input {
  height: 60rpx;
  border: 1px solid #ddd;
  border-radius: 6rpx;
  text-align: center;
  font-size: 26rpx;
}

/* 控制按钮 */
.control-buttons {
  display: flex;
  justify-content: space-between;
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.control-btn {
  flex: 1;
  font-size: 26rpx;
  padding: 15rpx 10rpx;
  line-height: 1.5;
  min-height: auto;
  border-radius: 6rpx;
}

.start-btn {
  background-color: #2ecc71;
  color: white;
}

.step-btn {
  background-color: #3498db;
  color: white;
}

.auto-btn {
  background-color: #f39c12;
  color: white;
}

.auto-btn.active {
  background-color: #e67e22;
}

.reset-btn {
  background-color: #e74c3c;
  color: white;
}

.control-btn[disabled] {
  background-color: #95a5a6 !important;
  color: #ecf0f1 !important;
}

/* 可视化区域 */
.visualization-area {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  min-height: 300rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.step-description {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  padding: 15rpx;
  background-color: #f8f9fa;
  border-radius: 6rpx;
  border-left: 4rpx solid #3498db;
}

/* 零钱兑换可视化 */
.coin-visualization {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.remaining-amount {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.coin-container {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-top: 10rpx;
}

.coin-selection {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #eef2f7;
  color: #5a6877;
  font-size: 30rpx;
  font-weight: 500;
}

.coin-selection.current {
  background-color: #3498db;
  color: #fff;
  animation: pulse 1s infinite;
}

.coin-selection.used {
  background-color: #2ecc71;
  color: #fff;
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}

/* 活动安排可视化 */
.activity-visualization {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.time-line {
  margin-bottom: 15rpx;
}

.time-markers {
  display: flex;
  justify-content: space-between;
  padding: 0 10rpx;
}

.time-marker {
  font-size: 24rpx;
  color: #666;
}

.activity-timeline {
  position: relative;
  background-color: #f5f5f5;
  height: 200rpx;
  margin: 20rpx 0;
  border-radius: 6rpx;
  overflow: hidden;
  padding: 10rpx 0;
}

.timeline-activity {
  position: relative;
  height: 60rpx;
  background-color: #95a5a6;
  color: white;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 6rpx;
  margin: 5rpx 0;
  transition: all 0.3s;
  opacity: 0.7;
}

.timeline-activity.current {
  background-color: #f39c12;
  opacity: 1;
  border: 2px solid #e67e22;
}

.timeline-activity.selected {
  background-color: #2ecc71;
  opacity: 1;
}

.timeline-activity.rejected {
  background-color: #e74c3c;
  opacity: 0.6;
  text-decoration: line-through;
}

.selected-activities {
  margin-top: 10rpx;
}

.selected-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.selected-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.selected-activity {
  background-color: #2ecc71;
  color: white;
  padding: 8rpx 15rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
}

/* 哈夫曼编码可视化 */
.huffman-visualization {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.huffman-tree {
  width: 100%;
  height: 500px;
  position: relative;
  margin-top: 20rpx;
  overflow: hidden;
  background-color: #f8f9fa;
  border-radius: 8px;
  box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.1);
}

.huffman-canvas {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.huffman-node {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #4caf50;
  color: white;
  font-weight: bold;
  text-align: center;
  line-height: 60rpx;
  z-index: 2;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  transform-origin: center center;
}

/* 叶子节点样式 */
.huffman-node.leaf {
  background-color: #2196F3;
  border: 2px solid #0d47a1;
}

/* 内部节点样式 */
.huffman-node.internal {
  background-color: #9C27B0;
  border: 2px solid #4a148c;
}

/* 当前选中的节点 */
.huffman-node.current {
  transform: scale(1.2);
  box-shadow: 0 0 15px rgba(255, 152, 0, 0.7);
  z-index: 3;
  border: 2px solid #ff9800;
}

/* 当前处理的节点 */
.huffman-node.processed {
  background-color: #607D8B;
}

.node-content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  line-height: 1;
}

.node-freq {
  font-size: 20rpx;
  margin-top: 4rpx;
  opacity: 0.9;
}

.node-char {
  font-weight: bold;
  font-size: 24rpx;
}

.frequency-table {
  margin-top: 30rpx;
  border: 1px solid #eee;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.frequency-table-header {
  display: flex;
  background-color: #4caf50;
  color: white;
  padding: 16rpx 20rpx;
  font-weight: bold;
}

.frequency-row {
  display: flex;
  padding: 12rpx 20rpx;
  border-bottom: 1px solid #f0f0f0;
  transition: background-color 0.3s;
}

.frequency-row:last-child {
  border-bottom: none;
}

.frequency-row:nth-child(even) {
  background-color: #f9f9f9;
}

.frequency-row.current {
  background-color: #fff3e0;
  border-left: 4px solid #ff9800;
}

.frequency-row:hover {
  background-color: #f0f7ff;
}

.frequency-row.highlight {
  animation: highlight-row 1.5s ease-in-out;
}

@keyframes highlight-row {
  0% { background-color: #f0f7ff; }
  50% { background-color: #d0e8ff; }
  100% { background-color: #f0f7ff; }
}

.frequency-char,
.frequency-count,
.frequency-code {
  flex: 1;
  padding: 8rpx;
}

.frequency-code {
  font-family: monospace;
  color: #0066cc;
  font-weight: 500;
  word-break: break-all;
}

.tree-info {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: white;
  padding: 8rpx 15rpx;
  border-radius: 4rpx;
  font-size: 20rpx;
  z-index: 10;
}

/* 结果区域 */
.result-area {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.result-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 15rpx;
  border-bottom: 1px solid #eee;
  padding-bottom: 10rpx;
}

.result-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.activity-list {
  margin-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.result-activity {
  background-color: #2ecc71;
  color: white;
  padding: 6rpx 15rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
}

/* 算法信息 */
.algorithm-info {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.info-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 15rpx;
  border-bottom: 1px solid #eee;
  padding-bottom: 10rpx;
}

.info-content {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.info-item {
  display: flex;
  font-size: 26rpx;
  line-height: 1.5;
}

.info-label {
  width: 180rpx;
  font-weight: 500;
  color: #333;
}

.info-value {
  flex: 1;
  color: #555;
}

.info-note {
  font-size: 24rpx;
  color: #e74c3c;
  line-height: 1.5;
  margin-top: 10rpx;
  padding: 10rpx;
  background-color: #f8d7da;
  border-radius: 6rpx;
}

/* API模式选择器 */
.mode-selector {
  margin: 20rpx 0;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.mode-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.mode-options {
  display: flex;
  gap: 20rpx;
}

.mode-option {
  flex: 1;
  padding: 15rpx 30rpx;
  text-align: center;
  background-color: #eef2f7;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #5a6877;
  transition: all 0.3s;
}

.mode-option.active {
  background-color: #3498db;
  color: #fff;
  font-weight: 500;
}

/* 速度控制 */
.speed-control {
  margin: 20rpx 0;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.speed-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.speed-slider {
  margin: 20rpx 0;
}

/* API错误提示 */
.api-error {
  margin: 20rpx 0;
  padding: 20rpx;
  background-color: #fff2f0;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #f5222d;
  text-align: center;
}

/* 加载指示器 */
.loading-indicator {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 20rpx 0;
  padding: 30rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 8rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-indicator text {
  font-size: 26rpx;
  color: #666;
}

/* 禁用状态 */
.mode-option.disabled {
  opacity: 0.5;
  cursor: not-allowed;
} 