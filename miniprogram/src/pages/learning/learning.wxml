<!-- 学习页面 -->
<view class="learning-page">
  <view class="header">
    <view class="title">算法学习</view>
    <view class="subtitle">掌握核心数据结构与算法概念</view>
  </view>
  
  <view class="search-box">
    <view class="search-input">
      <image src="/assets/icons/search.png" class="search-icon"></image>
      <input type="text" placeholder="搜索算法知识" bindinput="onSearchInput" value="{{searchKeyword}}"/>
      <view class="clear-btn" wx:if="{{searchKeyword}}" bindtap="clearSearch">
        <image src="/assets/icons/clear.png" class="clear-icon"></image>
      </view>
    </view>
  </view>
  
  <view class="category-tabs">
    <view class="tab {{currentCategory === 'all' ? 'active' : ''}}" data-category="all" bindtap="selectCategory">
      全部
    </view>
    <view class="tab {{currentCategory === 'dataStructure' ? 'active' : ''}}" data-category="dataStructure" bindtap="selectCategory">
      数据结构
    </view>
    <view class="tab {{currentCategory === 'algorithm' ? 'active' : ''}}" data-category="algorithm" bindtap="selectCategory">
      算法
    </view>
  </view>
  
  <view class="article-list">
    <block wx:for="{{filteredArticles}}" wx:key="id">
      <view class="article-card" bindtap="navigateToArticle" data-id="{{item.id}}">
        <view class="article-image">
          <image src="{{item.coverImage}}" mode="aspectFill"></image>
        </view>
        <view class="article-info">
          <view class="article-title">{{item.title}}</view>
          <view class="article-description">{{item.description}}</view>
          <view class="article-meta">
            <view class="article-tag">{{item.category}}</view>
            <view class="article-date">{{item.date}}</view>
          </view>
        </view>
      </view>
    </block>
    
    <view class="empty-result" wx:if="{{filteredArticles.length === 0}}">
      <image src="/assets/icons/empty.png" class="empty-icon"></image>
      <view class="empty-text">没有找到相关文章</view>
    </view>
  </view>
</view> 