.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background-color: #ffffff;
  z-index: 100;
  padding: 20rpx 30rpx;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.learning-categories {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 30rpx;
}

.category-item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.category-icon image {
  width: 100%;
  height: 100%;
}

.category-name {
  font-size: 28rpx;
  color: #333;
  text-align: center;
}

.recommended-section {
  padding: 0 30rpx 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.article-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.article-item {
  display: flex;
  background: #ffffff;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.article-cover {
  position: relative;
  width: 200rpx;
  height: 150rpx;
  margin-right: 24rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.article-cover image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.article-category {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  background: rgba(74, 110, 245, 0.8);
  color: #ffffff;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
}

.article-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.article-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 16rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.article-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.article-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999999;
}

.meta-item {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.meta-item image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.favorite-btn {
  margin-left: auto;
}

.favorite-btn image {
  width: 36rpx;
  height: 36rpx;
}

.tab-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 100rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

