.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.header {
  background-color: #4CAF50;
  padding: 20rpx 30rpx;
  color: #fff;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.learning-categories {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 30rpx;
}

.category-item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.category-icon image {
  width: 100%;
  height: 100%;
}

.category-name {
  font-size: 28rpx;
  color: #333;
  text-align: center;
}

.recommended-section {
  padding: 0 30rpx 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.article-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.article-item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.article-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.article-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.article-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.tab-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 100rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  color: #999;
}

.tab-item.active {
  color: #4CAF50;
}

.tab-icon {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 5rpx;
}

.tab-icon image {
  width: 100%;
  height: 100%;
} 