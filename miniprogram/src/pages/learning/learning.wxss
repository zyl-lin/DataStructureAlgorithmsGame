.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.header {
  background-color: #4CAF50;
  padding: 20rpx 30rpx;
  color: #fff;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.learning-categories {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 30rpx;
}

.category-item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.category-icon image {
  width: 100%;
  height: 100%;
}

.category-name {
  font-size: 28rpx;
  color: #333;
  text-align: center;
}

.recommended-section {
  padding: 0 30rpx 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.article-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.article-item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.article-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.article-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.article-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.tab-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 100rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  color: #999;
}

.tab-item.active {
  color: #4CAF50;
}

.tab-icon {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 5rpx;
}

.tab-icon image {
  width: 100%;
  height: 100%;
}

/* 学习页面样式 */
.learning-page {
  padding: 30rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 页面标题样式 */
.header {
  margin-bottom: 30rpx;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 搜索框样式 */
.search-box {
  margin-bottom: 30rpx;
}

.search-input {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 40rpx;
  padding: 15rpx 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 15rpx;
}

.search-input input {
  flex: 1;
  height: 40rpx;
  font-size: 28rpx;
  color: #333;
}

.clear-btn {
  padding: 8rpx;
}

.clear-icon {
  width: 28rpx;
  height: 28rpx;
}

/* 分类选项卡样式 */
.category-tabs {
  display: flex;
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
  position: relative;
}

.tab.active {
  color: #3498db;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #3498db;
  border-radius: 3rpx;
}

/* 文章列表样式 */
.article-list {
  display: flex;
  flex-direction: column;
  gap: 25rpx;
}

.article-card {
  display: flex;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.article-image {
  width: 240rpx;
  height: 180rpx;
  overflow: hidden;
}

.article-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.article-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

.article-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.article-description {
  font-size: 26rpx;
  color: #666;
  margin-bottom: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.article-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 15rpx;
  font-size: 24rpx;
}

.article-tag {
  color: #3498db;
  background-color: rgba(52, 152, 219, 0.1);
  padding: 6rpx 15rpx;
  border-radius: 20rpx;
}

.article-date {
  color: #999;
}

/* 空结果样式 */
.empty-result {
  padding: 60rpx 0;
  text-align: center;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
} 