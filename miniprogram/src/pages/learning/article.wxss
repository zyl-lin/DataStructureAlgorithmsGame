.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #fff;
}

.header {
  display: flex;
  align-items: center;
  background-color: #4CAF50;
  padding: 20rpx 30rpx;
  color: #fff;
  position: relative;
}

.back-btn {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.back-btn image {
  width: 100%;
  height: 100%;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  flex: 1;
  text-align: center;
  margin-right: 50rpx; /* 平衡返回按钮的宽度 */
}

.article-content {
  padding: 30rpx;
}

.article-header {
  margin-bottom: 30rpx;
}

.article-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.article-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.article-body {
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 30rpx;
}

.article-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.tag {
  background-color: #f0f0f0;
  color: #666;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
}

.related-articles {
  padding: 30rpx;
  background-color: #f5f5f5;
  margin-top: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.related-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.related-item {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.related-title {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.related-views {
  font-size: 24rpx;
  color: #999;
}

.feedback {
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
  margin-top: auto; /* 将反馈区域推到底部 */
}

.feedback-title {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 20rpx;
}

.feedback-buttons {
  display: flex;
  justify-content: center;
  gap: 40rpx;
}

.feedback-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.feedback-btn image {
  width: 50rpx;
  height: 50rpx;
}

.feedback-btn text {
  font-size: 24rpx;
  color: #666;
}

.feedback-btn.active text {
  color: #4CAF50;
}

/* 文章详情页面样式 */
.article-page {
  background-color: #f6f7f9;
  min-height: 100vh;
  padding-bottom: 100rpx;
  position: relative;
}

/* 文章头部样式 */
.article-header {
  position: relative;
  background-color: #ffffff;
  border-radius: 0 0 20rpx 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
  overflow: hidden;
}

.cover-image {
  width: 100%;
  height: 420rpx;
}

.header-content {
  padding: 30rpx;
}

.article-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.article-meta {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #888888;
}

.meta-item {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.meta-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.article-tags {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  background-color: #f0f3ff;
  color: #4a6ef5;
  border-radius: 20rpx;
  margin-right: 16rpx;
  margin-bottom: 10rpx;
}

/* 文章内容样式 */
.article-content {
  background-color: #ffffff;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  font-size: 30rpx;
  color: #333333;
  line-height: 1.8;
}

/* 相关推荐样式 */
.related-section {
  background-color: #ffffff;
  padding: 30rpx;
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 34rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 30rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title:before {
  content: '';
  position: absolute;
  left: 0;
  top: 10rpx;
  height: 32rpx;
  width: 8rpx;
  background-color: #4a6ef5;
  border-radius: 4rpx;
}

.related-list {
  display: flex;
  flex-direction: column;
}

.related-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.related-item:last-child {
  border-bottom: none;
}

.related-image {
  width: 160rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.related-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.related-title {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.4;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.related-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999999;
}

.related-tag {
  background-color: #f0f3ff;
  color: #4a6ef5;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
}

/* 底部操作栏样式 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  height: 100rpx;
  background-color: #ffffff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #666666;
  background-color: transparent;
  padding: 0;
  line-height: normal;
}

.action-btn::after {
  border: none;
}

.action-icon {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 6rpx;
}

.share-btn {
  background-color: transparent;
  margin: 0;
}

/* 富文本内容样式 */
.article-content rich-text {
  width: 100%;
}

.article-content image {
  max-width: 100% !important;
  margin: 20rpx 0;
}

.article-content video {
  width: 100% !important;
  margin: 20rpx 0;
}

.article-content .h1, .article-content .h2, .article-content .h3 {
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  font-weight: bold;
  color: #333333;
}

.article-content .h1 {
  font-size: 36rpx;
}

.article-content .h2 {
  font-size: 34rpx;
}

.article-content .h3 {
  font-size: 32rpx;
}

.article-content p {
  margin-bottom: 20rpx;
}

.article-content ul, .article-content ol {
  padding-left: 30rpx;
  margin-bottom: 20rpx;
}

.article-content a {
  color: #4a6ef5;
  text-decoration: underline;
} 