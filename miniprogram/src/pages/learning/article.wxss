.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #fff;
}

.header {
  display: flex;
  align-items: center;
  background-color: #4CAF50;
  padding: 20rpx 30rpx;
  color: #fff;
  position: relative;
}

.back-btn {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.back-btn image {
  width: 100%;
  height: 100%;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  flex: 1;
  text-align: center;
  margin-right: 50rpx; /* 平衡返回按钮的宽度 */
}

.article-content {
  padding: 30rpx;
}

.article-header {
  margin-bottom: 30rpx;
}

.article-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.article-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.article-body {
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 30rpx;
}

.article-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.tag {
  background-color: #f0f0f0;
  color: #666;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
}

.related-articles {
  padding: 30rpx;
  background-color: #f5f5f5;
  margin-top: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.related-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.related-item {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.related-title {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.related-views {
  font-size: 24rpx;
  color: #999;
}

.feedback {
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
  margin-top: auto; /* 将反馈区域推到底部 */
}

.feedback-title {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 20rpx;
}

.feedback-buttons {
  display: flex;
  justify-content: center;
  gap: 40rpx;
}

.feedback-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.feedback-btn image {
  width: 50rpx;
  height: 50rpx;
}

.feedback-btn text {
  font-size: 24rpx;
  color: #666;
}

.feedback-btn.active text {
  color: #4CAF50;
} 