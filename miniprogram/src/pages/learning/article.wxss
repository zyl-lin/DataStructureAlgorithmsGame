.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #fff;
}

.header {
  display: flex;
  align-items: center;
  background-color: #4CAF50;
  padding: 20rpx 30rpx;
  color: #fff;
  position: relative;
}

.back-btn {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.back-btn image {
  width: 100%;
  height: 100%;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  flex: 1;
  text-align: center;
  margin-right: 50rpx; /* 平衡返回按钮的宽度 */
}

.article-content {
  padding: 30rpx;
}

.article-header {
  margin-bottom: 30rpx;
}

.article-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.article-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.article-body {
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 30rpx;
}

.article-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.tag {
  background-color: #f0f0f0;
  color: #666;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
}

.related-articles {
  padding: 30rpx;
  background-color: #f5f5f5;
  margin-top: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.related-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.related-item {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.related-title {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.related-views {
  font-size: 24rpx;
  color: #999;
}

.feedback {
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
  margin-top: auto; /* 将反馈区域推到底部 */
}

.feedback-title {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 20rpx;
}

.feedback-buttons {
  display: flex;
  justify-content: center;
  gap: 40rpx;
}

.feedback-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.feedback-btn image {
  width: 50rpx;
  height: 50rpx;
}

.feedback-btn text {
  font-size: 24rpx;
  color: #666;
}

.feedback-btn.active text {
  color: #4CAF50;
}

/* 文章详情页样式 */
.article-page {
  background-color: #fff;
  min-height: 100vh;
}

/* 文章头部样式 */
.article-header {
  position: relative;
  height: 400rpx;
  overflow: hidden;
}

.article-cover {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.article-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
  color: #fff;
}

.article-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  line-height: 1.4;
}

.article-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.article-category {
  background-color: rgba(255, 255, 255, 0.3);
  padding: 6rpx 15rpx;
  border-radius: 20rpx;
  margin-right: 15rpx;
}

.article-date {
  opacity: 0.8;
}

/* 文章内容样式 */
.article-content {
  padding: 40rpx 30rpx;
  font-size: 30rpx;
  line-height: 1.8;
  color: #333;
}

/* 相关文章样式 */
.related-articles {
  padding: 30rpx;
  background-color: #f8f9fa;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  color: #333;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 30rpx;
  background-color: #3498db;
  border-radius: 3rpx;
}

.related-list {
  display: flex;
  overflow-x: auto;
  padding: 10rpx 0 20rpx;
  gap: 20rpx;
}

.related-list::-webkit-scrollbar {
  display: none;
}

.related-item {
  flex: 0 0 300rpx;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.related-image {
  width: 100%;
  height: 160rpx;
  object-fit: cover;
}

.related-title {
  padding: 15rpx;
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 74rpx;
}

/* 文章操作按钮 */
.article-actions {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
  border-top: 1rpx solid #eee;
  position: sticky;
  bottom: 0;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: transparent;
  padding: 0;
  line-height: 1.5;
  font-size: 24rpx;
  color: #666;
  border: none;
}

.action-btn::after {
  border: none;
}

.action-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

/* 富文本内容样式 */
.article-content rich-text {
  width: 100%;
}

.article-content .h1 {
  font-size: 36rpx;
  font-weight: bold;
  margin: 30rpx 0 20rpx;
  color: #333;
}

.article-content .h2 {
  font-size: 34rpx;
  font-weight: bold;
  margin: 28rpx 0 18rpx;
  color: #333;
}

.article-content .p {
  margin-bottom: 20rpx;
  text-align: justify;
}

.article-content .img {
  width: 100%;
  margin: 20rpx 0;
  border-radius: 8rpx;
}

.article-content .code {
  background-color: #f5f7f9;
  padding: 20rpx;
  font-family: monospace;
  border-radius: 8rpx;
  margin: 20rpx 0;
  overflow-x: auto;
  color: #333;
  font-size: 26rpx;
  line-height: 1.6;
}

.article-content .ul {
  padding-left: 30rpx;
  margin: 20rpx 0;
}

.article-content .ol {
  padding-left: 30rpx;
  margin: 20rpx 0;
}

.article-content .li {
  margin-bottom: 10rpx;
}

.article-content .strong {
  font-weight: bold;
}

.article-content .em {
  font-style: italic;
}

.article-content .blockquote {
  border-left: 8rpx solid #e0e0e0;
  padding: 15rpx 20rpx;
  color: #666;
  margin: 20rpx 0;
  background-color: #f9f9f9;
} 