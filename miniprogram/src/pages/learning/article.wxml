<!-- 文章详情页 -->
<view class="article-page">
  <view class="article-header">
    <image class="article-cover" src="{{article.coverImage}}" mode="aspectFill"></image>
    <view class="article-info">
      <view class="article-title">{{article.title}}</view>
      <view class="article-meta">
        <view class="article-category">{{article.category}}</view>
        <view class="article-date">{{article.date}}</view>
      </view>
    </view>
  </view>
  
  <view class="article-content">
    <rich-text nodes="{{formattedContent}}"></rich-text>
  </view>
  
  <view class="related-articles" wx:if="{{relatedArticles.length > 0}}">
    <view class="section-title">相关文章</view>
    <view class="related-list">
      <view class="related-item" wx:for="{{relatedArticles}}" wx:key="id" bindtap="navigateToArticle" data-id="{{item.id}}">
        <image class="related-image" src="{{item.coverImage}}" mode="aspectFill"></image>
        <view class="related-title">{{item.title}}</view>
      </view>
    </view>
  </view>
  
  <view class="article-actions">
    <button class="action-btn" open-type="share">
      <image src="/assets/icons/share.png" class="action-icon"></image>
      <text>分享</text>
    </button>
    <button class="action-btn" bindtap="toggleFavorite">
      <image src="{{isFavorite ? '/assets/icons/favorite-filled.png' : '/assets/icons/favorite.png'}}" class="action-icon"></image>
      <text>{{isFavorite ? '已收藏' : '收藏'}}</text>
    </button>
    <button class="action-btn" bindtap="navigateBack">
      <image src="/assets/icons/back.png" class="action-icon"></image>
      <text>返回</text>
    </button>
  </view>
</view> 