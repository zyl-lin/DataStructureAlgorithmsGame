.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  padding: 20rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.achievement-list {
  flex: 1;
}

.achievement {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.achievement-icon {
  width: 80rpx;
  height: 80rpx;
  background-color: #4CAF50;
  color: white;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}

.icon-placeholder {
  font-size: 36rpx;
  font-weight: bold;
}

.achievement-info {
  flex: 1;
}

.achievement-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.achievement-description {
  font-size: 24rpx;
  color: #666;
  display: block;
}

.achievement-status {
  margin-left: 20rpx;
}

.status {
  font-size: 24rpx;
  color: #999;
}

.status.completed {
  color: #4CAF50;
  font-weight: bold;
}

.stats-container {
  display: flex;
  justify-content: space-around;
  margin: 30rpx 0;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 10rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
} 