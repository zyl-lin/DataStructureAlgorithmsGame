.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 头部样式 */
.header {
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.title-area {
  margin-bottom: 20rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 关卡信息样式 */
.level-info {
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
}

.level-text {
  font-size: 28rpx;
  color: #555;
  margin-bottom: 10rpx;
}

.level-progress {
  width: 100%;
}

.progress-bar {
  height: 12rpx;
  background-color: #e0e0e0;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #4caf50;
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

/* 游戏内容样式 */
.game-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.task-card {
  background-color: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.task-header {
  padding: 20rpx;
  background-color: #f0f0f0;
  border-bottom: 1rpx solid #e5e5e5;
}

.task-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.task-body {
  padding: 20rpx;
}

.task-description {
  font-size: 28rpx;
  color: #555;
  line-height: 1.5;
}

/* 遍历完成状态样式 */
.traversal-summary {
  background-color: white;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-top: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.summary-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.summary-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.summary-label {
  font-size: 28rpx;
  color: #555;
}

.summary-status {
  font-size: 28rpx;
  font-weight: bold;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.status-complete {
  background-color: #e8f5e9;
  color: #4caf50;
}

.status-incomplete {
  background-color: #f5f5f5;
  color: #999;
}

/* 导航按钮样式 */
.navigation-buttons {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin: 30rpx 0;
}

.nav-btn {
  min-width: 180rpx;
  font-size: 28rpx;
  padding: 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  text-align: center;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.reset-btn {
  background-color: #f44336;
  color: white;
}

.prev-btn {
  background-color: #9e9e9e;
  color: white;
}

.prev-btn[disabled] {
  background-color: #e0e0e0;
  color: #a0a0a0;
}

.next-btn {
  background-color: #4caf50;
  color: white;
}

.next-btn[disabled] {
  background-color: #e0e0e0;
  color: #a0a0a0;
}

/* 底部提示区域样式 */
.footer {
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}

.tips {
  background-color: #fff8e1;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tips-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #ff9800;
  margin-bottom: 16rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tips-content text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
} 