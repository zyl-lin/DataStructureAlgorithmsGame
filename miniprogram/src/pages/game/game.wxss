.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f8f9fa;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0 30rpx;
  border-bottom: 1px solid #e0e0e0;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.level-info {
  font-size: 28rpx;
  color: #666;
  background-color: #e8f5e9;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
}

.game-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  padding: 30rpx;
  margin-bottom: 30rpx;
  min-height: 600rpx;
  position: relative;
}

.controls {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: 20rpx;
}

.operation-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  justify-content: center;
  margin-bottom: 20rpx;
}

.operation-btn {
  min-width: 160rpx;
  font-size: 28rpx;
  padding: 16rpx 24rpx;
  background-color: #4CAF50;
  color: white;
  border-radius: 8rpx;
  margin: 0;
  line-height: 1.5;
}

.operation-btn:active {
  opacity: 0.8;
}

.navigation-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}

.nav-btn {
  flex: 1;
  max-width: 300rpx;
  font-size: 28rpx;
  padding: 20rpx 0;
  margin: 0 20rpx;
  color: white;
  border-radius: 8rpx;
  line-height: 1.5;
}

.nav-btn.prev {
  background-color: #9e9e9e;
}

.nav-btn.next {
  background-color: #2196F3;
}

.nav-btn[disabled] {
  background-color: #e0e0e0;
  color: #9e9e9e;
}

.hint-panel {
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  right: 20rpx;
  background-color: rgba(255, 255, 255, 0.95);
  box-shadow: 0 0 20rpx rgba(0,0,0,0.1);
  border-radius: 12rpx;
  padding: 30rpx;
  z-index: 100;
}

.hint-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.close-hint {
  font-size: 26rpx;
  background-color: #f5f5f5;
  color: #666;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  margin: 0;
  width: auto;
  display: inline-block;
  line-height: 1.5;
}

/* 新增样式: 添加提示按钮 */
.hint-button {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #E0F2F1;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
  z-index: 5;
}

.hint-icon {
  font-size: 40rpx;
  color: #4CAF50;
}

/* 游戏状态提示样式 */
.status-panel {
  padding: 15rpx 30rpx;
  background-color: #FFF8E1;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  border-left: 8rpx solid #FFC107;
}

.status-text {
  font-size: 28rpx;
  color: #5D4037;
} 