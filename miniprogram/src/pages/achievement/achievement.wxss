/* 成就页面样式 */
.achievement-page {
  padding: 30rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 页面标题样式 */
.header {
  margin-bottom: 40rpx;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 成就统计信息 */
.achievement-stats {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx 0;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #3498db;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 成就列表 */
.achievement-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.achievement-item {
  display: flex;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.achievement-item.completed {
  border-left: 6rpx solid #2ecc71;
}

/* 成就图标 */
.achievement-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #eef2f7;
  border-radius: 50%;
  overflow: hidden;
}

.achievement-icon image {
  width: 48rpx;
  height: 48rpx;
}

/* 成就信息 */
.achievement-info {
  flex: 1;
  overflow: hidden;
}

.achievement-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.achievement-description {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

/* 进度条 */
.achievement-progress {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.progress-bar {
  flex: 1;
  height: 16rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #3498db;
  border-radius: 8rpx;
}

.progress-text {
  font-size: 22rpx;
  color: #999;
  min-width: 60rpx;
  text-align: right;
}

/* 成就状态 */
.achievement-status {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  font-size: 24rpx;
  min-width: 80rpx;
  text-align: center;
}

.status-completed {
  color: #2ecc71;
  font-weight: 500;
}

.status-in-progress {
  color: #f39c12;
}

.status-locked {
  color: #95a5a6;
} 