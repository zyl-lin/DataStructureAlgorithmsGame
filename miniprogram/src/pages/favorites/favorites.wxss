/* 收藏页面样式 */
.favorites-page {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding-bottom: 30rpx;
}

/* 头部样式 */
.header {
  background-color: #3498db;
  padding: 30rpx;
  color: #fff;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(52, 152, 219, 0.2);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

/* 内容区域 */
.content {
  padding: 30rpx;
}

/* 收藏项目样式 */
.favorite-item {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  padding: 25rpx;
  margin-bottom: 20rpx;
}

.item-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.game-icon {
  width: 70rpx;
  height: 70rpx;
  border-radius: 10rpx;
  margin-right: 15rpx;
}

.item-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.item-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.item-footer {
  display: flex;
  flex-direction: column;
}

.item-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.tag {
  font-size: 22rpx;
  color: #3498db;
  background-color: rgba(52, 152, 219, 0.1);
  border-radius: 20rpx;
  padding: 6rpx 16rpx;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
}

.item-actions {
  display: flex;
  justify-content: flex-end;
}

.btn-action {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
  padding: 10rpx 20rpx;
  margin-left: 15rpx;
  border-radius: 30rpx;
  background-color: #f5f5f5;
}

.btn-action.primary {
  color: #fff;
  background-color: #3498db;
}

.action-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 6rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  text-align: center;
  margin-bottom: 40rpx;
}

.btn-start {
  font-size: 28rpx;
  color: #fff;
  background-color: #3498db;
  border-radius: 40rpx;
  padding: 16rpx 40rpx;
} 