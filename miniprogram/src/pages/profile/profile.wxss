.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header {
  background-color: #4CAF50;
  padding: 20rpx 30rpx;
  color: #fff;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.user-profile {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 30rpx;
  margin: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  margin-right: 30rpx;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.level {
  font-size: 28rpx;
  color: #4CAF50;
  display: block;
}

.edit-btn {
  width: 50rpx;
  height: 50rpx;
}

.edit-btn image {
  width: 100%;
  height: 100%;
}

.stats-container {
  display: flex;
  justify-content: space-between;
  margin: 0 20rpx 20rpx;
}

.stats-item {
  flex: 1;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 10rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.stats-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 5rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
}

.menu-list {
  margin: 0 20rpx;
}

.menu-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 30rpx;
  color: #666;
  padding: 10rpx 20rpx;
  display: block;
}

.menu-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 30rpx 20rpx;
  border-radius: 10rpx;
  margin-bottom: 2rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.menu-icon image {
  width: 100%;
  height: 100%;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.menu-arrow {
  width: 30rpx;
  height: 30rpx;
}

.menu-arrow image {
  width: 100%;
  height: 100%;
}

.tab-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 100rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  margin-top: auto; /* 将标签栏推到底部 */
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  color: #999;
}

.tab-item.active {
  color: #4CAF50;
}

.tab-icon {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 5rpx;
}

.tab-icon image {
  width: 100%;
  height: 100%;
} 