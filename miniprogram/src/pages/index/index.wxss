.container {
  padding: 30rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f8f9fa;
}

.header {
  text-align: center;
  padding: 20rpx 0 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.game-list {
  flex: 1;
}

.game-category {
  margin-bottom: 40rpx;
}

.category-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #444;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 8rpx solid #4CAF50;
}

.game-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 用户信息区域 */
.user-info {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-top: 40rpx;
  background-color: white;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.user-details {
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.level {
  font-size: 26rpx;
  color: #666;
  margin-top: 6rpx;
}

/* 底部导航栏高度占位，防止内容被遮挡 */
.bottom-space {
  height: 100rpx;
}

.message, .status {
  margin: 10px 0;
  font-size: 16px;
}

.game-item {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
  transition: all 0.3s ease;
}

.game-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.game-card {
  display: flex;
  padding: 20rpx;
  align-items: center;
}

.game-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
  background-color: #e8f5e9;
}

.game-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.game-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.game-description {
  font-size: 26rpx;
  color: #666;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
} 